@model AnalyzeTypeInsertVM

<h3>To insert a new analysis type, fill out the information below.</h3>

<div class="card">
<div class="card-body">

    <form action="Insert" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-2">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Name"></span></div>

            </div>
            <div class="mb-2">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Description"></span></div>
            </div>
            <div class="mb-2">
                <label asp-for="Active" class="form-label">Active</label>
                <select asp-for="Active" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <div class="text-danger">
                    <span asp-validation-for="Active"></span>
                </div>
            </div>

        <div class="mb-3">
                <button class="btn btn-success" type="submit">Save</button>
        </div>
    </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}



