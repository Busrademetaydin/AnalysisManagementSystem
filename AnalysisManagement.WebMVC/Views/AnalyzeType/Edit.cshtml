@model AnalyzeTypeUpdateVM

<div class="card">
    <div class="card-header">
        <h3>Edit</h3>

    </div>
    <div class="card-body">

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-2">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Name"></span></div>

            </div>
            
            <div class="mb-2">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Description"></span></div>
            </div>
            <div class="mb-2">
                <label asp-for="Active" class="form-label">Active</label>
                <select asp-for="Active" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <div class="text-danger">
                    <span asp-validation-for="Active"></span>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Update</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



