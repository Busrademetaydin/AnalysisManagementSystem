<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnalysisManagement.WebMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnalysisManagement.WebMVC.styles.css" asp-append-version="true" />
   @*  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> *@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Analysis Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        @* <li class="nav-item"> *@
                       @*      <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Drug" asp-action="Index">Drugs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Analysis" asp-action="Index">Analyzes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="HPLCEquipment" asp-action="Index">Equipments</a>
                        </li>
                    </ul>
                    <div class="nav-item">
          
                        @* @if (User.Identity.IsAuthenticated)
                        {

                            <a style="color: black;" class="nav-link" href="@Url.Action("Logout", "Account")">Logout    </a>
                                <div class="rounded-circle text-center" style="width: 40px; height: 40px; background-color: darkmagenta; color: white; line-height: 40px;">
                                    <span class="navbar-text"> @(User.Identity.Name?[0].ToString().ToUpper())</span>
                                </div>
                         
                        } *@
                       
                        <div>
                            @if (User.Identity.IsAuthenticated)
                            {
                            <div class="rounded-circle text-center" style="width: 40px; height: 40px; background-color: darkmagenta; color: white; line-height: 40px;">
                                <span>@(User.Identity.Name?[0].ToString().ToUpper())</span>
                            </div>

                                @* <a class="nav-link" href="@Url.Action("Logout", "Account")"> <span style="color: black;">Logout</span></a> *@
                        } 
                            else
                        {
                            <a class="nav-link" href="@Url.Action("Index", "Login")"><i class="fa-solid fa-user" style="color:darkmagenta"></i> <span style="color: black;">Login</span></a>
                        }
                        </div> 
                       
                       
                   
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - AnalysisManagement.WebMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
