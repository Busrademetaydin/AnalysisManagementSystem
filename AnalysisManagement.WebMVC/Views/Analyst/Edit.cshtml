@model AnalystUpdateVM



<div class="card">
    <div class="card-header">
        <h3>Edit</h3>

    </div>
    <div class="card-body">

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control">
                <div class="text-danger"> <span asp-validation-for="FirstName"></span></div>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control">
                <div class="text-danger"> <span asp-validation-for="LastName"></span></div>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Gender</label>
                <input asp-for="Gender" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Gender"></span></div>
            </div>
            <div class="mb-3">
                <label asp-for="IdentificationNumber" class="form-label">Identification Number</label>
                <input asp-for="IdentificationNumber" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Email"></span></div>
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" type="date" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Phone"></span></div>
            </div>


            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Title"></span></div>
            </div>


            <div class="mb-3">
                <button class="btn btn-success" type="submit">Update</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



