@model HPLCEquipmentUpdateVM

<div class="card">
    <div class="card-header">
        <h3>Edit</h3>

    </div>
    <div class="card-body">

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="HPLCEquipmentId"/>

            <div class="mb-3">
                <label asp-for="Brand" class="form-label">Brand</label>
                <input asp-for="Brand" class="form-control">
                <div class="text-danger"> <span asp-validation-for="Brand"></span></div>
            </div>

            <div class="mb-3">
                <label asp-for="SerialNumber" class="form-label">Serial Number</label>
                <input asp-for="SerialNumber" class="form-control">
                <div class="text-danger"> <span asp-validation-for="SerialNumber"></span></div>
            </div>

            <div class="mb-3">
                <label asp-for="CalibrationDueDate" class="form-label">Calibration Due Date</label>
                <input asp-for="CalibrationDueDate" type="date" class="form-control">
                <div class="text-danger"> <span asp-validation-for="CalibrationDueDate"></span></div>
            </div>
          
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Update</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



